@page
@model loveladies.Pages.Mentorias.IndexModel;
@{
    ViewData["Title"] = "Mentorias Disponíveis";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Tema</th>
            <th scope="col">Nome da Mentora</th>
            <th scope="col">Detalhes</th>
        </tr>
    </thead>

    @foreach (var mentoria in @Model.Mentorias)
    {
        <tbody>
            <tr class="table-default">
                <th scope="row">@(mentoria.Titulo)</th>
                <td>@(mentoria.Nome)</td>
                <td><a href="/mentorias/details/@(mentoria.Id)">Detalhes</a></td>
            </tr>
        </tbody>
    }
</table>